<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="150dp">

	<ImageView
		android:id="@+id/iv_Notification_pic"
		android:layout_width="75dp"
		android:layout_height="75dp"
		android:layout_marginTop="10dp"
		android:layout_marginStart="20dp"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/tv_Notification_songName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_marginTop="20dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="10dp"
		android:layout_toEndOf="@+id/iv_Notification_pic"/>

	<TextView
		android:id="@+id/tv_Notification_artist"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_marginTop="5dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="10dp"
		android:layout_toEndOf="@+id/iv_Notification_pic"
		android:layout_below="@+id/tv_Notification_songName"/>

	<ImageView
		android:id="@+id/iv_Notification_like"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="15dp"
		android:layout_below="@+id/iv_Notification_pic"
		android:layout_alignParentStart="true"
		tools:ignore="ContentDescription" />

	<ImageView
		android:id="@+id/iv_Notification_preSong"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_marginTop="15dp"
		android:layout_marginEnd="40dp"
		android:layout_below="@+id/iv_Notification_pic"
		android:layout_toStartOf="@+id/iv_Notification_control"
		tools:ignore="ContentDescription" />

	<ImageView
		android:id="@+id/iv_Notification_control"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_marginTop="15dp"
		android:layout_below="@+id/iv_Notification_pic"
		android:layout_centerHorizontal="true"
		tools:ignore="ContentDescription" />

	<ImageView
		android:id="@+id/iv_Notification_nextSong"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_marginTop="15dp"
		android:layout_marginStart="40dp"
		android:layout_below="@+id/iv_Notification_pic"
		android:layout_toEndOf="@+id/iv_Notification_control"
		tools:ignore="ContentDescription" />

	<ImageView
		android:id="@+id/iv_Notification_lyric"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_marginTop="15dp"
		android:layout_marginEnd="20dp"
		android:layout_below="@+id/iv_Notification_pic"
		android:layout_alignParentEnd="true"
		tools:ignore="ContentDescription" />
	
</RelativeLayout>